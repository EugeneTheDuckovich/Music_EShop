@model eshop.ViewsModel.LoginViewModel
@{
    ViewData["Title"] = "View";
}

<h1>View</h1>
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Login" class="card p-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter email">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <button type="submit" style="width:85px" class="btn btn-primary">Log in </button>
        </form>
    </div>
</div>