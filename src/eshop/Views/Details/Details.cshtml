@{
}
<header>
    <style src="">
        .custom-shape-divider-top-1662513322 {
            position: absolute;
            z-index: -1;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
        }

            .custom-shape-divider-top-1662513322 svg {
                position: relative;
                display: block;
                width: calc(235% + 1.3px);
                height: 359px;
            }

            .custom-shape-divider-top-1662513322 .shape-fill {
                fill: #313;
            }

        header {
            position: relative;
            z-index: 0;
            height: 200px;
        }

        body {
            margin: 0;
            background-color: #505;
            color: white;
        }

        section {
            margin: 15px;
        }

        ul {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            list-style: none;
        }

        li {
            width: 200px;
            margin-right: 10px;
            margin-left: 10px;
        }

            li > p {
                margin: 0px;
                text-align: center;
            }

        header h1 {
            display: inline;
            width: fit-content;
            margin: 0px;
            font-size: 60px;
            color: white;
        }

        header nav {
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
        }

        header a {
            text-decoration: none;
            color: white;
            font-size: 25px;
        }
    </style>
</header>

<h3>Details</h3>
@{
    if(Model.Guitar != null)
    {
        <h3>Guitar</h3>
    }else if(Model.Keyboard != null)
    {
        <h3>Keyboard</h3>
    }
}
<div>
    <form asp-controller="Cart" asp-action="AddItem" asp-method="get" asp-route-id="@Model.Id">
        <img width="200" height="240" src="~/images/@(Model.Id.ToString()).jpg" />
        <p>Type: @Model.BriefDescription</p>
        <p>Producer: @Model.Producer</p>
        <p>Model: @Model.Model</p>
        <p>Price @Model.Price $</p>
        @if(Model.Guitar != null)
        {
            <p>Number of strings: @Model.Guitar.NumberOfStrings</p>
            <p>Body material: @Model.Guitar.BodyMaterial</p>
            <p>Deck material: @Model.Guitar.DeckMaterial</p>
        }
        @if(Model.Keyboard != null)
        {
            <p>Number of octaves: @Model.Keyboard.NumberOfOctaves</p>
            <p>Material: @Model.Keyboard.Material</p>
        }
        <input type="submit" value="Add to cart" />
    </form>
</div>